package processo_seletivoJob;

import java.util.Scanner;

public class Questao5_Job {

	public static void main(String[] args) {
		

		Scanner scan = new Scanner(System.in);
		String s; 
		
		System.out.println("Entrada: ");
		s = scan.nextLine();
		
		System.out.println();
		
		System.out.printf("Entrada: %s\n", s);
		System.out.printf("SaÃ­da: %s\n", inverterCaracteres(s));
	}


	public static String inverterCaracteres(String s) {
		int tamanhoString, i;
		String aux = " "; 
		

		tamanhoString = s.length(); 
		for (i = (tamanhoString -1);i >= 0; i--) {
			aux = aux + s.charAt(i); 

		}
		return aux; 
	}
}
